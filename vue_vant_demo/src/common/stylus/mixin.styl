one-px($color)
  position relative
  &:after
    content ""
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    height 1px
    background-color $color
    @media screen and (-webkit-min-device-pixel-ratio:2)
      transform scaleY(.5)
    @media screen and (-webkit-min-device-pixel-ratio:3)
      transform scaleY(.333333)

last-none()
  &:after
    content ""
    display none

bg-image($name)
  @media screen and (-webkit-min-device-pixel-ratio:2)
    background-image url($name+"@2x.png")
  @media screen and (-webkit-min-device-pixel-ratio:3)
    background-image url($name+"@3x.png")

overflowHidden()  
  @media screen and (mim-width:320px), (max-width 360px)
    overflow hidden
    text-overflow ellipsis
    white-space nowrap


