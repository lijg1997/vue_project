// 遮罩过渡样式
.mask-enter
  opacity 0 !important
.mask-enter-active
  transition opacity .4s linear !important 
.mask-enter-to 
  opacity 1 !important
.mask-leave 
  opacity 1 !important
.mask-leave-active 
  transition opacity .4s linear !important
.mask-leave-to
  opacity 0 !important

// 添加删除物品图标过渡样式
.removeCount-enter
  opacity 0 !important
  transform translateX(48px) rotate(0) !important
.removeCount-enter-active
  transition .3s all linear !important
.removeCount-enter-to 
  opacity 1 !important
  transform translateX(0) rotate(-720deg) !important
.removeCount-leave 
  opacity 1 !important
  transform translateX(0) rotate(-720deg) !important
.removeCount-leave-active 
  transition .3s all linear !important
.removeCount-leave-to
  opacity 0 !important
  transform translateX(48px) rotate(0) !important


